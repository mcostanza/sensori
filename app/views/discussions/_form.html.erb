<%= form_for(@discussion) do |f| %>
  <% if @discussion.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @discussion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="media discussion">
    <a class="pull-left" href="#">
      <%= image_tag @member.image(:small), :alt => @member.name %>
    </a>
    <div class="media-body">
      <%= f.text_field :subject, :placeholder => "Topic" %>
      <%= f.text_area :body, :placeholder => "Message", :rows => 10 %>
      <%= hidden_field_tag(:email, @member.email) %>
    </div>
  </div>
  <div class="pull-right">
    <div class="control-group">
      <div class="controls">
        <label class="checkbox">
          <input type="checkbox" id="discussion-notifications" name="discussion_notifications" checked="true"> Notify me on responses
        </label>
        <button type="submit" class="btn btn-primary pull-right">Post</button>
      </div>
    </div>
  </div>
<% end %>

<!-- Modal -->
<div id="discussion-notification-modal" class="modal hide fade" tabindex="-1" role="dialog">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3>Enter email address</h3>
  </div>
  <div class="modal-body">
    <p>Email address to send response notifications:</p><input id="modal-email" type="text" placeholder="Email Address" />
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal">Cancel</button>
    <button id="modal-post" class="btn btn-primary">Post</button>
  </div>
</div>

