<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/">Sensori</a>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <%= content_tag :li, link_to("Home", root_path), :class => current_page?(root_path) ? "active" : "" %>
          <%= content_tag :li, link_to("Beats", beats_path), :class => current_page?(beats_path) ? "active" : "" %>
