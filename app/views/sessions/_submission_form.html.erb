<% if signed_in? %>
  <%= render '/shared/s3_uploader_form_jst' %>
  <div class="submission-container media form-horizontal"><%= image_tag "loader.gif" %></div>
  <script type="text/javascript">
    Sensori.Submission = new Sensori.Models.Submission(<%= raw @submission.to_json %>);
    Sensori.SubmissionView = new Sensori.Views.Submission({
      el: $(".submission-container"),
      model: Sensori.Submission,
      sessionTitle: <%= raw @session.title.to_json %>
    }).render();
  </script>
<% else %>
  <div class="login-prompt">
    Log In to Submit a Beat
    <%= link_to image_tag("soundcloud-connect.png", :class => 'soundcloud-connect'), members_sign_in_path %>
  </div>
<% end %>
