<% if @session.soundcloud_playlist_url.present? %>
  <iframe class="playlist" width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=<%= CGI.escape(@session.soundcloud_playlist_url) %>&amp;color=ff6600&amp;auto_play=false&amp;show_artwork=true"></iframe>
<% elsif @session.bandcamp_album_id.present? %>
	<%= content_tag :iframe, nil, :class => "bandcamp playlist", :seamless => '', :src => "http://bandcamp.com/EmbeddedPlayer/album=#{@session.bandcamp_album_id}/size=large/bgcol=ffffff/linkcol=0687f5/artwork=small/transparent=true/" %>
<% else %>
<div class="alert alert-error playlist">
  This session has ended. The playlist will be posted soon!
</div>
<% end %>
