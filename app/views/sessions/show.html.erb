<div class="row">
  <div class="span8">
    <%= image_tag @session.image_url %>
  </div>
  <div class="span4">
    <h3><%= @session.title %></h3>
    <p><%= simple_format(@session.description) %></p>
    <%= link_to("Download", @session.attachment_url, :class => "btn btn-primary") if @session.attachment? %>
  </div>
</div>

<% if signed_in? %>
<%= render @submission.new_record? ? 'new_submission' : 'edit_submission' %>
<% else %>
<div class="row">
	Sign in to submit a beat for this session!
	<%= link_to image_tag("http://connect.soundcloud.com/2/btn-connect-m.png", :class => 'soundcloud-connect'), members_sign_in_path %>
</div>
<% end %>
