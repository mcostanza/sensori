<table cellpadding="0" cellspacing="0" style="width: 100%" width="100%">
	<tr>
		<td>
			<%= link_to image_tag("discussion_notifications/header.png", :alt => "Sensori Collective", :title => "Sensori Collective", :style => "width: 600px; margin-bottom: 10px;"), discussion_url(@response.discussion) %>
			
			<div style="width: 400px; margin: 0px 100px 10px 100px; font-size: 11px;">
				Hey <%= @member.name %>, <%= @response.member.name %> just commented on <%= discussion_owner(@response.discussion.member, @response.member, @member) %> post titled "<%= @response.discussion.subject %>" in Discussions:
			</div>

			<div style="width: 400px; margin: 0px 100px 10px 100px; font-size: 11px;">
				<%= @response.body %>
			</div>
			
			<div style="width: 400px; margin: 0px 100px 10px 100px; font-size: 11px;">
				<%= link_to "Check it out!", discussion_url(@response.discussion) %>
			</div>
			
			<%= link_to image_tag("discussion_notifications/footer.png", :alt => "San Diego, CA", :title => "San Diego, CA", :style => "width: 600px;"), discussion_url(@response.discussion) %>
		</td>
	</tr>
</table>
