<div class="row">
  <div class="span12">
    <div class="media member-profile">
      <div class="row">
        <div class="span2">
          <%= image_tag @member.image(:large), :alt => @member.name %>
        </div>
        <div class="offset2">
          <%= link_to @member.soundcloud_profile_url, :target => "_blank", :class => "pull-right" do %>
            <%= image_tag "soundcloud-logo.png", :alt => "Soundcloud profile" %>
          <% end %>
          <h2><%= title @member.name %></h2> <%= member_profile_full_name(@member) %>
          <%= member_profile_location(@member) %>
          <%= @member.bio_html %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="span12">
    <ul class="thumbnails beats">
      <% @tracks.each do |track| %>
        <%= render :partial => 'shared/track', :object => track %>
      <% end %>
    </ul>
  </div>
</div>
