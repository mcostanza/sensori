<% if admin? %>
<div class="row">
<%= render :partial => 'shared/action_buttons', :locals => { :object => @tutorial } %>
</div>
<% end %>
<div class="row">
  <div class="span8">
    <div class="flex-video widescreen"><%= content_tag :iframe, nil, :type => "text/html", :src => @tutorial.youtube_embed_url, :frameborder => "0" %></div>
  </div>
  <div class="span4 tutorial-sidebar">
    <h3><%= @tutorial.title %></h3>
    <h4>by <%= @tutorial.member.name %></h4>
    <p><%= simple_format(@tutorial.description) %></p>
    <%= download_attachment_button(@tutorial) %>
  </div>
</div>

<div class="tutorial well">
  <%= @tutorial.body_html.html_safe %>
</div>

<div id="tutorial-lightbox" class="lightbox hide fade"  tabindex="-1" role="dialog" aria-hidden="true">
  <div class="lightbox-content">
    <img class="lightbox-image" />
    <div class="lightbox-caption"></div>
  </div>
</div>
